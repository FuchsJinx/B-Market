<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AboutActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_marginTop="15dp"
                style="@style/Text"
                android:text="Версия 1.0.1"
                android:textSize="30sp" />
            <TextView
                android:layout_marginTop="10dp"
                style="@style/Text"
                android:text="Разработчик: Fuchs"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Читать пользовательское соглашение..."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/soft_coffee_brown_dark"/>

            <TextView
                android:id="@+id/pol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:text="@string/pol"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/soft_coffee_brown_dark"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="30dp"
                android:id="@+id/lottieAnimationView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>